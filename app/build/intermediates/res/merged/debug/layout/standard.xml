<?xml version="1.0" encoding="utf-8"?>
<com.konka.floatingtouch.View.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/standard_draglayout"
    android:orientation="vertical" >

    <com.konka.floatingtouch.View.InsideDragLayout
        android:id="@+id/standard_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/standard_bg" >

        <Button
            android:id="@+id/leftbutton"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/standard_direction_left" />

        <Button
            android:id="@+id/back"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="8dp"

             android:background="@drawable/standard_back"
            android:gravity="bottom|center_vertical|center_horizontal"
            android:text="@string/back"
            android:textSize="10sp" />

        <Button
            android:id="@+id/home"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="8dp"
    
            android:background="@drawable/standard_home"
            android:gravity="bottom|center_vertical|center_horizontal"
            android:text="@string/home"
            android:textSize="10sp" />

        <Button
            android:id="@+id/recent"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="8dp"
 
            android:background="@drawable/standard_recent"
            android:gravity="bottom|center_vertical|center_horizontal"
            android:text="@string/recent"
            android:textSize="10sp" />

        <Button
            android:id="@+id/rightbutton"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/standard_advanced"
            android:gravity="bottom|center_vertical|center_horizontal"
            android:text="@string/advanced"
            android:textSize="10sp" />
    </com.konka.floatingtouch.View.InsideDragLayout>

    <com.konka.floatingtouch.View.InsideDragLayout
        android:id="@+id/advanced_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/standard_layout"
        android:layout_marginTop="2dp"
        android:background="@drawable/advanced_bg"
        android:orientation="vertical" >

        <com.konka.floatingtouch.View.InsideDragLayout
            android:id="@+id/raw1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/vol_down"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginLeft="4dp"
                
                android:background="@drawable/advanced_volume_down"
                android:gravity="bottom|center_vertical|center_horizontal" />
			<com.konka.floatingtouch.View.InsideDragLayout
			    
			    android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
			    <ImageView
                android:id="@+id/vol"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/volume" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/volume"
                android:textColor="#ffffff"            
                android:textSize="10sp" />

			</com.konka.floatingtouch.View.InsideDragLayout>
            
            <Button
                android:id="@+id/vol_up"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="@drawable/advanced_volume_up" />

            <Button
                android:id="@+id/channel_down"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/advanced_channel_down" />

            <com.konka.floatingtouch.View.InsideDragLayout
                android:layout_width="24dp"
               	android:layout_height="wrap_content"
                
                android:orientation="vertical">
                <ImageView
                	android:id="@+id/channel"
                	android:layout_width="fill_parent"
                	android:layout_height="fill_parent"
                	android:background="@drawable/channel" />

            	<TextView
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:layout_gravity="center_horizontal"
            	    android:text="@string/channel"
            	    android:textColor="#ffffff"
            	    android:textSize="10sp" />

            </com.konka.floatingtouch.View.InsideDragLayout>
           

            <Button
                android:id="@+id/channel_up"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="@drawable/advanced_channel_up" />
        </com.konka.floatingtouch.View.InsideDragLayout>

        <com.konka.floatingtouch.View.InsideDragLayout
            android:id="@+id/raw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/raw1" >

            <Button
                android:id="@+id/silence"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/advanced_silence"
                android:gravity="bottom|center_vertical|center_horizontal"
                android:text="@string/silence"
                android:textSize="10sp" />

            <Button
                android:id="@+id/source"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/advanced_source"
                android:gravity="bottom|center_vertical|center_horizontal"
                android:text="@string/source"
                android:textSize="10sp" />

            <Button
                android:id="@+id/menu"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/advanced_menu"
                android:gravity="bottom|center_vertical|center_horizontal"
                android:text="@string/menu"
                android:textSize="10sp" />

            <Button
                android:id="@+id/ddd"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/advanced_3d"
                android:gravity="bottom|center_vertical|center_horizontal"
                android:text="@string/ddd"
                android:textSize="10sp" />

            <Button
                android:id="@+id/power"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/advanced_power"
                android:gravity="bottom|center_vertical|center_horizontal"
                android:text="@string/power"
                android:textSize="10sp" />
        </com.konka.floatingtouch.View.InsideDragLayout>
    </com.konka.floatingtouch.View.InsideDragLayout>

</com.konka.floatingtouch.View.DragLayout>